function [x, w] = ClenshawCurtis(a, b, N)
% Returns abscissas and weights for the corresponding Clenshaw-Curtis
% n-point quadrature over the interval [a, b].
bma=b-a;

c=1./(1-(0:2:N).^2);
c=[c, c(ceil(N/2):-1:2)];
f=real(ifft(c));
w=bma*([f(1)/2, f(2:N), f(1)/2]);
disp
th=(0:N)*pi/N;
x=((b-a)*cos(th)+a+b)/2;
end