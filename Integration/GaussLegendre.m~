function [x, w] = GaussLegendre(a, b)
% Returns abscissas and weights for the corresponding Gauss-Legendre
% n-point quadrature over the interval [a, b].

%% Calculate the roots of the Legendre Polynomial
%P=Legendre(n+1);
%x=polyRoots(P(n+1,:));
%dP=polyD(P(n+1,:));
%w=(b-a)./((1-x.^2).*(Horner(dP, x)).^2);

%% Calcualate the eigenvalues and eigenvectors of the recurrence matrix
k=(1:n-1);
beta=k./sqrt(((2*k-1).*(2*k+1)));
J=full(gallery('tridiag', beta, zeros(1,n), beta));
[V,D]=eig(J);
x=(b-a)/2*diag(D).'+(a+b)/2;
w=(b-a)*V(1,:).^2;
end