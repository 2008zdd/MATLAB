function [] = laplacianEigs(N,k)
[R2,Drr,Dff,r,phi]=chebLapPol(N,N);
Drr=Drr(2:end,2:end);
R2=R2(2:end,2:end);

xx=r*cos([0, phi]);
yy=r*sin([0, phi]);

figure(1);
[Vf,mu]=eigs(Dff, k, 'sm');
mu=diag(mu);
I=eye(size(Drr));
vv=zeros(N,N);

for j=1:k
    [Vr,lam]=eigs(Drr+mu(j)*I, R2, k, 'sm');
    lam=sqrt(-diag(lam));
    Vr=bsxfun(@times, sign(Vr(end,:)), Vr);
    for i=1:k
        vv(2:end,:)=real(Vr(:,i)*Vf(:,j).');
        subplot(k,k,(i-1)*k+j);
        surfl(xx,yy,[vv(:,end), vv],'light');
        axis square; axis off;
        shading interp;
        colormap(gray(256));
        text(-1.8,-1.2,sprintf('%f', lam(i)));
        view(0,90);
    end
end
end